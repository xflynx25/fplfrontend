<!-- views/index.ejs -->

<!DOCTYPE html>
<html>
<head>
    <title>GW <%= gw %> - Athena v2.0 Predictions</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="toolbar">
    <h1>GW <%= gw %> - Athena v2.0 Predictions</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/team">My Team</a>
    </nav>
  </div>

  <div class="tables-container">
    <div class="table-wrapper">
      <h2>Top <%= sortedN1.length %> Players - Points N1</h2>
      <p><em>Note: injuries are not factored into the score for N1</em></p>
      <table>
        <tr>
          <th>Rank</th>
          <th>Name</th>
          <th>Points N1</th>
        </tr>
        <% sortedN1.forEach((player, index) => { %>
        <tr>
          <td><%= index + 1 %>.</td>
          <td class="<%= player.status === 'a' ? 'active' : 'unavailable' %>">
            <%= player.name %>
          </td>
          <td><%= player.points_N1 %></td>
        </tr>
        <% }); %>
      </table>
    </div>

    <div class="table-wrapper">
      <h2>Top <%= sortedN6.length %> Players - Points N6</h2>
      <p><em>&nbsp;</em></p> <!-- Empty note for consistent spacing -->
      <table>
        <tr>
          <th>Rank</th>
          <th>Name</th>
          <th>Points N6</th>
        </tr>
        <% sortedN6.forEach((player, index) => { %>
        <tr>
          <td><%= index + 1 %>.</td>
          <td class="<%= player.status === 'a' ? 'active' : 'unavailable' %>">
            <%= player.name %>
          </td>
          <td><%= player.points_N6 %></td>
        </tr>
        <% }); %>
      </table>
    </div>
  </div>
</body>
</html>
